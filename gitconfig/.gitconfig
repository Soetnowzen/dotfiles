[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true
	ui = auto
[core]
	editor = vim
	pager = less -RFX
	whitespace = trailing-space,space-before-tab
	autocrlf = input
[push]
	default = tracking
[merge]
	tool = vimdiff
[hooks]
	dir = ~/git/hooks
[mergetool]
	keepBackup = false
[diff]
	tool = vimdiff
	mnemonicprefix = true
	renames = copies
	conflictstyle = diff3
[alias]
	a = add
	ap = add -p
	bi = bisect run # <my_script> <arguments>
	br = branch
	c = commit
	ca = commit --amend
	ci = commit
	cla = clean -xdf # clean all untracked files
	cm = commit -m
	co = checkout
	coh = checkout HEAD
	com = checkout master
	cs = commit -s
	d = diff
	dc = diff --cached
	dt = difftool
	dw = diff --word-diff
	f = fetch
	fa = fetch --all
	filelog = log -u
	files = diff-tree --no-commit-id --name-only -r
	fl = log -u
	la = "!git config -l | grep alias | cut -c 7-"
	lg = !"git lg3"
	lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(red)%h %C(yellow)%d%C(reset)%s%C(blue)[%an]%C(green)(%ar)%C(reset)' --all
	lg2 = log --decorate --graph --pretty=format:"%C(Yellow)%h%C(red)%d\\ %C(reset)%s\\ %C(blue)[%cn]"
	lg3 = log --graph --abbrev-commit --decorate --format=format:"%C(red)%h\\ %C(yellow)%d%C(reset)%s%C(blue)[%an]%C(green)(%ai)%C(reset)" --all
	ll = log --graph --decorate --numstat --pretty=format:"%C(red)%h%C(yellow)%d\\ %C(reset)%s\\ %C(blue)[%cn]%C(green)(%ar)"
	mt = mergetool
	ours = checkout --ours --
	pl = pull
	pr = pull --rebase
	ps = push
	r = revert
	restore = checkout -m --
	r = reset
	r1 = reset HEAD^
	r2 = reset HEAD~2
	rh = reset --hard
	rh1 = reset HEAD^ --hard
	rh2 = reset HEAD~2 --hard
	s = status
	sh = show
	sl = stash list
	sp = stash pop
	ss = status -s
	st = stash
	t = tag
	theirs = checkout --theirs --
	undo = reset --soft HEAD~1
	zip = archive --format=zip HEAD
	zip-latest = archive -o latest.zip HEAD
