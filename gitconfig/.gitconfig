[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true
	ui = auto
[core]
	editor = vim
	pager = less -RFX
	whitespace = trailing-space,space-before-tab
	autocrlf = input
[push]
	default = tracking
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
	mnemonicprefix = true
	renames = copies
[alias]
	a = add
	ap = add -p
	bi = bisect run # <my_script> <arguments>
	br = branch
	c = commit
	ca = clean -xdf # clean all untracked files
	ci = commit
	cm = commit -m
	co = checkout
	cs = commit -s
	d = diff
	discard = reset --hard
	dw = diff --word-diff
	f = fetch
	filelog = log -u
	files = diff-tree --no-commit-id --name-only -r
	fl = log -u
	lg = !"git lg3"
	lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(red)%h %C(yellow)%d%C(reset)%s%C(blue)[%an]%C(green)(%ar)%C(reset)' --all
	lg2 = log --decorate --graph --pretty=format:"%C(Yellow)%h%C(red)%d\\ %C(reset)%s\\ %C(blue)[%cn]"
	lg3 = log --graph --abbrev-commit --decorate --format=format:"%C(red)%h\\ %C(yellow)%d%C(reset)%s%C(blue)[%an]%C(green)(%ai)%C(reset)" --all
	ll = log --graph --decorate --numstat --pretty=format:"%C(red)%h%C(yellow)%d\\ %C(reset)%s\\ %C(blue)[%cn]%C(green)(%ar)"
	mt = mergetool
	ours = checkout --ours --
	pl = pull
	ps = push
	r = revert
	restore = checkout -m --
	s = status
	sh = show
	sp = stash pop
	ss = status -s
	st = stash
	t = tag
	theirs = checkout --theirs --
	zip = archive --format=zip HEAD
	zip-latest = archive -o latest.zip HEAD
	undo = reset --soft HEAD~1
