[core]
  editor = vim
[color]
  ui = auto
[alias]
  st = status
  a = add
  ps = push
  pl = pull
  f = fetch
  c = commit
  lg = !"git lg1"
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(red)%h%C(reset) %C(yellow)%d%C(reset)%s%C(reset)%C(blue)[%an]%C(reset)%C(green)(%ar)%C(reset)' --all
  lg2 = log --pretty=format:"%C(Yellow)%h%C(red)%d\\ %C(reset)%s%C(blue)\\ [%cn]" --decorate --graph
